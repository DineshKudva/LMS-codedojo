<script>
  const button=document.getElementsByClassName('flag');
    
  for(var i=0;i<button.length;i++){
    button[i].addEventListener('click',markCourse())
  }

  function markCourse(e){
   
   e.preventDefault();

    button.style.background="green";
    button.textContent="Completed";
    button.style.color="white";
  }
</script>

